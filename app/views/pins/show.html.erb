<h1>Showing Pin <%= @pin.title %></h1>

<img src=<%= @pin.url %> alt=""> 

<div class="container">
<%= link_to 'Delete', pin_path(@pin),
        method: :delete,
        data: { confirm: 'Are you sure?' } %> 

<%= link_to 'edit', edit_pin_path(@pin) %>
  <%= link_to 'Back', root_path %>
</div>

<hr>
<div class="container">
  <h3>Add Comment</h3>
<%= form_with model: [@pin, @comment], local: true do |f| %>  <p>
    <%= f.label :Comment %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>

<h3>Comments</h3>

<% @comments.each do |comment| %>
<li class ='list-group-item'>
 <strong><%= comment.user.username %> </strong>: 
<%= comment.body %> <br>
<%= time_ago_in_words(comment.created_at)+ ' ago' unless comment.created_at.blank? %>  </li>

<% end %>



